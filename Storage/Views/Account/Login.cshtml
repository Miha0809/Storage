@model Storage.Models.LoginModel
@{
    ViewBag.Title = "title";
    Layout = "Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="Id"/>*@
        <div class="form-group">
            <label asp-for="Email" class="control-label">@Html.DisplayNameFor(x => x.Email)</label>
            <input asp-for="Email" name="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">@Html.DisplayNameFor(x => x.Password)</label>
            <input asp-for="Password" name="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
</div>
</body>
</html>