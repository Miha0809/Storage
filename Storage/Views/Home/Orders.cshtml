@model IEnumerable<Storage.Models.Order>

@{
    ViewData["Title"] = "AllOrders";
    Layout = "Layout";
}

<h2>AllOrders</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table border">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDateTime)
            </td>
            <td>
                <a href="~/Order/OrderEdit/@item.Id">Edit</a> |
                <a href="~/Order/Details/@item.Id">Details</a> |
                <a href="~/Order/OrderDelete/@item.Id"
                   onclick="return confirm('Delete?')">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>